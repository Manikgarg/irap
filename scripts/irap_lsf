#Send irap jobs on the farm - if paired end files, parallelize
#Input: a config file and irap parameters
#Output: send jobs on the farm
#A README file (fastq_qc_README.txt) with more details about each step and 
# the general process is available in the same directory.
set -e 

###################################
# load shared code
LSF_CMD=irap_lsf
source $IRAP_DIR/aux/sh/lsf_shared_code.sh


declare -i s1=0
declare -i s2=0

#############
# Submit jobs
p_info " * Initialization "
submit_job "${jobname_prefix}0[1]" $cmd conf=$conf stage0 $IRAP_PARAMS
WAIT_FOR_IDS=
# step1 parallel quality filtering
# step2 align
# step3 counting 

# Paired end files
p_info "* Step&21 (PE)"
for p in $pe ; do 
    let s1=s1+1
    let s2=s2+1
    p_info "Lib (PE): $p"
    submit_job "${jobname_prefix}${s1}1[1]" -w "ended(${jobname_prefix}0*)" "$cmd conf=$conf  pe=$p se=  $IRAP_PARAMS stage1"
    submit_job "${jobname_prefix}2[$s2]"  -w "ended(${jobname_prefix}${s1}1*)"  "$cmd conf=$conf stage1 stage2 stage3as  se=  pe=$p  $IRAP_PARAMS"
done

# Single end files
echo "***********************************************"s
echo "*Step1&2 (SE)"
for f in $se ; do
    let s2=s2+1
    p_info "Lib (SE): $f"
    submit_job "${jobname_prefix}2[$s2]" -w  "ended(${jobname_prefix}0*)"  "$cmd conf=$conf stage1 stage2 stage3as pe=  se=$f  $IRAP_PARAMS"
done

# Normalization
p_info "Stage3"
submit_job "${jobname_prefix}q"  -w "ended(${jobname_prefix}2*)"  "$cmd conf=$conf  $IRAP_PARAMS stage3a"


# DE
#submit_job "${jobname_prefix}f"  -w "ended(${jobname_prefix}q)"  "$cmd conf=$conf  $IRAP_PARAMS stage3a stage4"

# ####
# # DE
de_ofiles=`irap conf=$conf de_files|tail -n 1`
let s2=1
for f in $de_ofiles; do
    let s2=s2+1
    p_info "DE: $f"
    submit_job "${jobname_prefix}de[$s2]"  `check_dependency ${jobname_prefix}q`  "irap conf=$conf  $IRAP_PARAMS $f"
done

#########################################
# To finalize, run the whole pipeline
# If everything went ok then nothing should be done
# otherwise it should fail and an email will be sent
if [ "$de_ofiles-" = "-" ]; then
    DEP=`check_dependency ${jobname_prefix}q`
else
    DEP=`check_dependency ${jobname_prefix}de`
fi

submit_job "${jobname_prefix}f" $DEP   "irap conf=$conf  $IRAP_PARAMS"
    
# send an email to the user
submit_job_status "${jobname_prefix}f"

# TODO: report
echo JOBS=$name/${jobname_prefix}*.out
echo JOBNAME=${jobname_prefix}f
exit






